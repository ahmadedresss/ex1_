#include<stdio.h>
#include<string.h>
#include "AsciiArtTool.h"
#include"RLEList.h"

#define ENCODED "-e"
#define INVERTED "-i"
#define SPACE ' '
#define AT_SIGN '@'
#define ARGC 4
#define FLAG 1
#define SOURCE 2
#define TARGET 3




char invert(char value)
{
    if(value==AT_SIGN)
    {
        return SPACE;
    }
    if(value==SPACE)
    {
        return AT_SIGN;
    }
    return value;
}


int main(int argc, char **argv)
{
    if(argc!=ARGC)
    {
        printf("Error\n");
        return 0;
    }
    if(strcmp(argv[FLAG],INVERTED) && strcmp(argv[FLAG],ENCODED))
    {
        printf("Error\n");
        return 0;
    }
    FILE* in_stream = fopen(argv[SOURCE],"r");
    if(!in_stream)
    {
        printf("Error\n");
        return 0;
    }
    FILE* out_stream = fopen(argv[TARGET],"w");
    if(!out_stream)
    {
        printf("Error\n");
        fclose(in_stream);
        return 0;
    }

    RLEList List = asciiArtRead(in_stream);
    if(!List)
    {
        printf("Error\n");
        fclose(in_stream);
        fclose(out_stream);
        return 0;
    }

    RLEListResult result;
    if(strcmp(argv[FLAG],INVERTED)==0)
    {
        result = RLEListMap(List,invert);
        if(result!=RLE_LIST_SUCCESS)
        {
            printf("Error\n");
        }
         result=asciiArtPrint(List,out_stream);
    }
    else if(strcmp(argv[FLAG],ENCODED)==0)
    {
         result=asciiArtPrintEncoded(List,out_stream);        
    }
    
    
    RLEListDestroy(List);
    fclose(in_stream);
    fclose(out_stream);
    
    return 0;
}
